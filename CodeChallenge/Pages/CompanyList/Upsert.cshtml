@page
@model CodeChallenge.Pages.CompanyList.UpsertModel

<br />
<h2 class="text-info">@(Model.Company.Id == 0 ? "Create Page" : "Edit Page")</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        @if (Model.Company.Id != 0)
        {
            <input type="hidden" asp-for="Company.Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Company.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Company.Name" class="form-control" />
            </div>
            <span asp-validation-for="Company.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Company.Exchange"></label>
            </div>
            <div class="col-6">
                <input asp-for="Company.Exchange" class="form-control" />
            </div>
            <span asp-validation-for="Company.Exchange" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Company.Ticker"></label>
            </div>
            <div class="col-6">
                <input asp-for="Company.Ticker" class="form-control" />
            </div>
            <span asp-validation-for="Company.Ticker" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Company.Isin"></label>
            </div>
            <div class="col-6">
                <input asp-for="Company.Isin" class="form-control" />
            </div>
            <span asp-validation-for="Company.Isin" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Company.Website"></label>
            </div>
            <div class="col-6">
                <input asp-for="Company.Website" class="form-control" />
            </div>
            <span asp-validation-for="Company.Website" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">@(Model.Company.Id == 0 ? "Create New Company" : "Edit Company")</button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}